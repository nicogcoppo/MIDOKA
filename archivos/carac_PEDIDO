(pedidoID INT NOT NULL PRIMARY KEY AUTO_INCREMENT, 
OPERACION_REFERENCIA INT NOT NULL,
ID_ARTICULO INT NOT NULL,
CANTIDAD INT NOT NULL,
FLAG INT,
UNIQUE index_PEDIDO (OPERACION_REFERENCIA,ID_ARTICULO,CANTIDAD),
			  CONSTRAINT `OPERACION DE REFERENCIA`
					FOREIGN KEY (OPERACION_REFERENCIA) REFERENCES OPERACIONES (opID)
						    ON DELETE CASCADE
						       	      ON UPDATE RESTRICT,
			  CONSTRAINT `ID_ARTICULO`
					FOREIGN KEY (ID_ARTICULO) REFERENCES ARTICULOS (artID)
						    ON DELETE CASCADE
						       	      ON UPDATE RESTRICT							     
							      
							      ) ENGINE = InnoDB;
		



